<form class="create-card mt-5" id="login-signUp-form">
    <h3 id="login-header">Login</h3>
    <div class="p-3">
        <h4>Username</h4>
        <input type="text" class="form-control" id="user" placeholder="Username">
        <h4>Password</h4>
        <input type="password " class="form-control form-content" id="password" placeholder="Password">
        <button type="submit" class="btn btn-primary btn-sm mt-4" id="login-btn">Login</button>
        <button type="button" class="btn btn-secondary btn-sm mt-4" id="signUp-btn">Create an Account</button>
    </div>
</form>